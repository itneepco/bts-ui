<mvc:View controllerName="bts.controller.Display_Table"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.ui.layout.form">

     <Page id="page" title="" showHeader="false" enableScrolling="true" class="sapUiResponsivePadding Page sapBlueCrystalBackground" backgroundDesign="Transparent">
        <content>
            <HBox id="_IDGenHBox709" width="auto" >
                <Image id='_HeaderImg1'
                    src="{imageModel>/path}/images/bts.jpg"
                    width="100%"
                    height="100%" />
            </HBox>

            <!-- <VBox id="_IDGenVBox2"  fitContainer="true"> -->
              <FlexBox id="Hbox1" class="myHbox1" justifyContent="SpaceBetween" >
                <FlexBox id="Hbox2">
                  <items>
                    <Button id="Back" text="Back" icon="sap-icon://nav-back" width="auto" press="OnBack" type="Emphasized" class="back"/>
                  </items>
                </FlexBox>
                  <items>
                    <MenuButton id="_IDGenMenuButton1" text="Filter" buttonMode="Split" defaultAction="onDefaultAction" 
                      beforeMenuOpen="onBeforeMenuOpen" class="buttonSpacing" icon="sap-icon://filter"
                      type="Emphasized" width="250px">
                      <menu>
                        <Menu id="_IDGenMenu1" itemSelected="onMenuAction">
                          <MenuItem id="_IDGenMenuItem4" text="All" press="onFilterPress" icon="sap-icon://filter"/>
                          <MenuItem id="_IDGenMenuItem11" text="User" press="onFilterPress" icon="sap-icon://filter"/>
                          <MenuItem id="_IDGenMenuItem9" text="Date" press="onFilterPress" icon="sap-icon://filter"/>
                          <MenuItem id="_IDGenMenuItem1" text="Purchase Order" press="onFilterPress" icon="sap-icon://filter"/>
                          <MenuItem id="_IDGenMenuItem10" text="Billing Location" press="onFilterPress" icon="sap-icon://filter"/>
                          <MenuItem id="_IDGenMenuItem2" text="BTS ID" press="onFilterPress" icon="sap-icon://filter"/>
                          <MenuItem id="_IDGenMenuItem6" text="Vendor Code" press="onFilterPress" icon="sap-icon://filter"/>
                          <MenuItem id="_IDGenMenuItem8" text="Status" press="onFilterPress" icon="sap-icon://filter"/>
                        </Menu>
                      </menu>
                    </MenuButton>
                  </items>
                  
              </FlexBox>
              <FlexBox id="Hbox3" class="myHbox1" justifyContent="SpaceBetween" alignItems="Center">
                  <Text id="t1" text="" />
                  <Panel id="inputPanel1" visible="false" class="inputPanel">
                    <Input id="purchaseOrderInput" placeholder="Enter Purchase Order....." submit="onInputSubmit" showSuggestion="true" showValueHelp="true" valueHelpRequest="onPurHelpRequest" />
                  </Panel>
                  <Panel id="inputPanel10" visible="false" class="inputPanel">
                    <Input id="UserInput" placeholder="Enter User ID....." submit="onInputSubmit" showSuggestion="true" showValueHelp="true" valueHelpRequest="onUserHelpRequest" />
                  </Panel>
                  <Panel id="inputPanel2" visible="false" class="inputPanel">
                    <Input id="BTSIDInput" placeholder="Enter BTS ID....." submit="onInputSubmit" showSuggestion="true" showValueHelp="true" valueHelpRequest="onBtsHelpRequest" />
                  </Panel>
                  <Panel id="inputPanel5" visible="false" class="inputPanel">
                    <Input id="vendorcodeInput" placeholder="Enter Vendor Code....." submit="onInputSubmit" showSuggestion="true" showValueHelp="true" valueHelpRequest="onVenHelpRequest" />
                  </Panel>
                  <Panel id="inputPanel7" visible="false" class="inputPanel">
                    <Input id="Statusinput" placeholder="Enter Status....."  submit="onInputSubmit" showSuggestion="true" showValueHelp="true" valueHelpRequest="onStatusHelpRequest"/>
                  </Panel>
                  <Panel id="inputPanel8" visible="false" class="inputPanel">
                    <Input id="Billinginput" placeholder="Enter Billing Location....."  submit="onInputSubmit" showSuggestion="true" showValueHelp="true" valueHelpRequest="onBillingLocHelpRequest"/>
                  </Panel>
                  <Panel id="inputPanel9" visible="false" class="inputPanel">
                    <DatePicker id="DateField"  maxDate="{dateModel>/maxDate}"  editable="true" change="onInputSubmit" displayFormat="dd.MM.yyyy" valueFormat="dd.MM.yyyy"/>
                  </Panel>
              </FlexBox>
            <!-- </VBox> -->
              
            
            <!-- <VBox id="_IDGenVBox1" alignItems="Center" fitContainer="true" class="VBOX"> -->
              <ScrollContainer id="_IDGenScrollContainer18" height="auto" vertical="true" horizontal="true">
                <Table id="dataTable" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders"
                  selectionChange="onTableSelectionChange" 
                  class="tableHeader" items="{btsdata>/btsdata}" width="auto" >
                    <columns>
                      <Column id="_IDGenColumn1" minScreenWidth="Tablet" demandPopin="false" hAlign="Center" width="auto"  >
                        <Text id="_IDGenText1" class="label"  text="BTS ID" />
                      </Column>
                      <Column id="_IDGenColumn19" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="auto"  >
                        <Text id="_IDGenText21" class="label"  text="Invoice Number" />
                      </Column>

                      <Column id="_IDGenColumn3" minScreenWidth="Tablet" demandPopin="false" hAlign="Center" width="auto">
                        <Text id="_IDGenText17" class="label"  text="Invoice type" />        
                      </Column>

                      <Column id="_IDGenColumn13" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="auto">
                        <Text id="_IDGenText13" class="label"  text="Purchase Order" />
                      </Column>

                      <Column id="_IDGenColumn2" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="auto">
                        <Text id="_IDGenText2" class="label"  text="Vendor Code" />
                      </Column>

                      <Column id="_IDGenColumn10" minScreenWidth="Tablet" demandPopin="true"  hAlign="Center" width="auto">
                        <Text id="_IDGenText10" class="label" text="Vendor Name" />
                      </Column>

                      <Column id="_IDGenColumn30" minScreenWidth="Tablet" demandPopin="false" hAlign="Center" width="auto">
                        <Text id="_IDGenText29" class="label"  text="Plant"  />        
                      </Column>

                      <Column id="_IDGenColumn17" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="auto" >
                        <Text id="_IDGenText3" class="label" text="Billing Location" />
                      </Column>

                      <Column id="_IDGenColumn9" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="auto">
                        <Text id="_IDGenText9" class="label"  text="Amount" />
                      </Column>

                      <Column id="_IDGenColumn29" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="auto" >
                        <Text id="_IDGenText30" class="label" text="GeM Inv No" />
                      </Column> 

                      <Column id="_IDGenColumn18" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="auto">
                        <Text id="_IDGenText19" class="label"  text="DMS Document No" />
                      </Column>

                      <Column id="_IDGenColumn25" minScreenWidth="Tablet" demandPopin="false" hAlign="Center" width="auto">
                        <Text id="_IDGenText25" class="label"  text="Invoice (MIRO) Document No" />
                      </Column>

                      <Column id="_IDGenColumn26" minScreenWidth="Tablet" demandPopin="false" hAlign="Center" width="auto">
                        <Text id="_IDGenText27" class="label"  text="Clearing Document No" />
                      </Column>


                      <Column id="_IDGenColumn11" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="auto">
                        <Text id="_IDGenText15"  class="label" text="Status" />
                      </Column>

                      <Column id="_IDGenColumn130" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="auto">
                        <Text id="_IDGenText150"  class="label" text="Last Changed By" />
                      </Column>
                      
                    </columns>
                    
                    <items>
                      <ColumnListItem id="_IDGenColumnListItem1" 
                        type="Active"
                        vAlign="Middle"
                        press="OnRowPress" > 
                        <cells>
                          <ObjectIdentifier id="_IDGenText5"  text="{btsdata>BTSID}" />
                          <ObjectIdentifier id="_IDGenText22"  text="{btsdata>XBLNR}" />
                          <ObjectIdentifier id="_IDGenText18" text="{btsdata>INVOICETYPE}" />
                          <ObjectIdentifier id="_IDGenText14"  text="{btsdata>EBELN}" />
                          <ObjectIdentifier id="_IDGenText6"  text="{btsdata>LIFNR}" />
                          <ObjectIdentifier id="_IDGenText11" text="{btsdata>NAME1}" />
                          <ObjectIdentifier id="_IDGenText38" text="{btsdata>BWKEY}" />
                          <ObjectIdentifier id="_IDGenText12" text="{btsdata>PRCTR}" />
                          <ObjectIdentifier id="_IDGenText7"  text="{btsdata>ZAMT}" />
                          <ObjectIdentifier id="_IDGenText31" text="{btsdata>GEM_INV_NO}" />  
                          <ObjectIdentifier id="_IDGenText20"  text="{btsdata>DOKNR}" />
                          <ObjectIdentifier id="_IDGenText26"  text="{btsdata>BELNR}" />
                          <ObjectIdentifier id="_IDGenText28"  text="{btsdata>AUGBL}" />
                          <ObjectIdentifier id="_IDGenText16"  text="{btsdata>STATUS}" />
                          <ObjectIdentifier id="_IDGenText160"  text="{btsdata>LAST_CHANGED_BY}" />
                        </cells>
                      </ColumnListItem>
                    </items>
                </Table>
                    <f:SimpleForm id="addUserForm" layout="ResponsiveGridLayout">
                      <f:content>
                        <HBox id="h1" class="center-hbox">
                          <Button id="Previous" icon="sap-icon://navigation-left-arrow" text="Previous" press="onPreviousPagePress" width="100px"/>
                          <Button id="Next" icon="sap-icon://navigation-right-arrow" text="Next" press="onNextPagePress" width="100px"/>
                        </HBox>
                        
                        
                      </f:content>
                    </f:SimpleForm>
          </ScrollContainer>

            <!-- </VBox> -->
               
               
        </content>
    </Page>
 

</mvc:View>
