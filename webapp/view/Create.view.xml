<mvc:View controllerName="bts.controller.Create"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:u="sap.ui.unified"
    xmlns:semantic="sap.f.semantic">
    <Page id="page" enableScrolling="true" showHeader="false" class="sapUiResponsivePadding Page sapBlueCrystalBackground" backgroundDesign="Transparent">
        <HBox id="_IDGenHBox709">
            <Image id='_HeaderImg1' src="{imageModel>/path}/images/bts.jpg" width="100%" height="100%" />
        </HBox>
        
        <VBox id="_IDGenVBox1" alignItems="Center"   class="sapMFlexBoxAlignItemsCenter" width="100%">
            <l:Grid id="Grid1" defaultSpan="XL6 L6 M6 S12" class="sapUiSmallMargin">
                <f:SimpleForm id="addUserForm" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" columnsL="1" singleContainerFullSize="false">
                    <f:content>
                        <Label id="POlabel" text="PO No " required="true" class="label" />
                        <Input id="PO" liveChange="onInputChange" autocomplete="false" type="Number" maxLength="10" showSuggestion="true" showValueHelp="true" valueHelpRequest="onPOHelpRequest" />

                        <Label id="Datelabel" text="Date " required="true" class="label" />
                        <DatePicker id="DateField" class="noInputDatePicker" maxDate="{dateModel>/maxDate}" editable="true" change="onDateInputChange" displayFormat="dd.MM.yyyy" valueFormat="yyyy-MM-dd"/>
                        
                        <Label id="vendorEmaillabel" text="Vendor Email " required="true"  class="label" />
                        <Input id="vendorEmail" editable="false"  />
                        
                        <Label id="Profitlabel" text="Billing Location " class="label" required="true" />
                        <Input id="Profit" showValueHelp="true" valueHelpRequest="onProfitCenterHelpRequest" />

                        <Label id="EmailLabel" text="Paying Authority Email Address " required="true" class="label" />
                        <Input id="Email"  editable="false" />

                        <!-- <Label id="SESAmtlabel" text="Previous SES Amount" class="label" />
                        <Input id="SESAmount"  editable="false" />

                        <Label id="GRNAmtlabel" text="Previous GRN Amount" class="label" />
                        <Input id="GRNAmount"  editable="false" /> -->

                        <!-- <CheckBox id="acceptTermsCheckbox" text="100% Advance Payment" valueState="Information" enabled="true" select="onCheckboxSelect"/> -->
                        <Label id="AdvancePaymentLabel" text="100% Advance Payment?" required="true" class="label" />
                        <Select id="paymentMethodSelect" 
                                selectedKey="" 
                                enabled="true" 
                                change="onSelectChange">
                            <items>
                                <core:Item id="dd1" key="" text="" />
                                <core:Item id="dd2" key="Yes" text="Yes" />
                                <core:Item id="dd3" key="No" text="No" />
                                
                            </items>
                        </Select>

                        <Label id="GeMInvNoFlag" text="Whether GeM Procurement?" required="true" class="label" />
                        <Select id="GeM_Procurement" 
                                selectedKey="" 
                                enabled="true" 
                                change="onSelectChange1">
                            <items>
                                <core:Item id="Gem1" key="" text="" />
                                <core:Item id="Gem2" key="Yes" text="Yes" />
                                <core:Item id="Gem3" key="No" text="No" />
                            </items>
                        </Select>

                        
                        
                    </f:content>
                </f:SimpleForm>         

                <f:SimpleForm id="addUserForm1" editable="true"  labelSpanL="3" columnsL="1" layout="ResponsiveGridLayout">
                    <f:content>
                        
                        <Label id="VendorCodeLabel" text="Vendor Code " required="true" class="label" />
                        <!-- <HBox id="_IDGenHBox"> -->
                            <Input id="VendorCode" liveChange="onVendorChange" class="VCode" maxLength="10" change="onVendorCodeChange" valueState="None" type="Number" showSuggestion="true" showValueHelp="true" valueHelpRequest="onVendorCodeHelpRequest" required="true" />
                            <!-- <CheckBox id="VendorActive" text="BTS Create without GRN/SES" class="CheckBox" selected="false" select="onVendorCheckSelect" /> -->
                        <!-- </HBox> -->
  
                        <Label id="vendorNamelabel" text="Vendor Name " required="true" class="label" />
                        <TextArea id="vendorName" editable="false" rows="2" cols="26"  />

                        <Label id="vendorPhnolabel" text="Vendor Phone Number " required="true" class="label" />
                        <Input id="vendorPhno" editable="false" />

                        <Label id="Remarkslabel" text="Remarks " required="true" class="label" />
                        <TextArea id="Remarks" rows="3" maxLength="300" />
                            
                        <!-- <Label id="sesamtlabel" text="Total SES Amount" class="label" />
                        <Input id="totsesamt"  editable="false" />

                        <Label id="grnamttlabel" text="Total GRN Amount" class="label" />
                        <Input id="totgrnamt"  editable="false" />   -->

                        <Label id="PlantLabel" text="Plant " required="true" class="label" />
                        <Input id="Plant" change="onPlantChange" class="noInputDatePicker" maxLength="4" valueState="None" type="Number" showSuggestion="true" showValueHelp="true" valueHelpRequest="onPlantHelpRequest" required="true" />
                        
                        <Label id="GeMInvNo" text="GeM Invoice Number" required="true" class="label" />
                        <Input id="GemInvNo" visible="false" maxLength="60"/>
                    </f:content>
                </f:SimpleForm>
            </l:Grid>

            <!-- <HBox id="TableContainer" justifyContent="Center" alignItems="Center" width="160%"> -->
                <HBox id="TableContainer1" justifyContent="Center" alignItems="Center" width="170%">
                    <VBox id="ButtonVbox1" fitContainer="true"  >
                        <ScrollContainer id="s1">
                            <Table id="Table1"  class="customTable" width="100%">
                                <!-- Columns definition -->
                                <columns>
                                    <Column id="c1"  hAlign="Center">
                                        <Text id="t1" text="Invoice Number" class="label"/>
                                    </Column>
                                    <Column id="c6"  hAlign="Center">
                                        <Text id="t6" text="Invoice Text"  class="label"/>
                                    </Column>
                                    <Column id="c2"  demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                                        <Text id="t2" text="GRN Number" class="label"/>
                                    </Column>
                                    <Column id="c3" demandPopin="true" minScreenWidth="Tablet"  hAlign="Center">
                                        <Text id="t3" text="SES Number" class="label"/>
                                    </Column>
                                    <Column id="c5" demandPopin="true" minScreenWidth="Tablet"  hAlign="Center">
                                        <Text id="t5" text="Amount (*Including of all taxes) " class="label"/>
                                    </Column>
                                    <!-- <Column id="c7"  demandPopin="true" minScreenWidth="Tablet"  hAlign="Center">
                                        <Text id="t7" text="Currency" class="label"/>
                                    </Column> -->
                                    <Column id="c4" demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
                                        <Text id="t4" text="Attachment" class="label"/>
                                    </Column>
                                </columns>
                                <!-- Table items -->
                                <items>
                                    <ColumnListItem id="cl1">
                                        <cells>
                                            <Input id="Invoice" maxLength="16" liveChange="onInputChange1"/>
                                            <Input id="Text" maxLength="80" liveChange="onInputChange1"/>
                                            <MultiInput id="GRN"
                                                        showValueHelp="true"
                                                        valueHelpRequest="onGRNHelpRequest"
                                                        liveChange="onInputChange1">
                                            </MultiInput>
                                            <MultiInput id="SES"
                                                        showValueHelp="true"
                                                        valueHelpRequest="onSESHelpRequest">
                                            </MultiInput>
                                            <Input id="Amount"  type="Number" showSuggestion="true" />
                                            <!-- <Input id="Currency" liveChange="onInputChange1" enabled="false" showValueHelp="true" valueHelpRequest="onCURRHelpRequest" showSuggestion="true" /> -->
                                            <u:FileUploader id="fileUploaderBankMandate"
                                                            change="handleValueChange"
                                                            name="myFileUpload"
                                                            uploadUrl="/sap/opu/odata/sap/ZBTS_ODATA_SRV/ZDRAFT_UPLOADSet"
                                                            tooltip="Upload your file"
                                                            uploadComplete="handleUploadCompleteMandate"
                                                            sendXHR="true" useMultipart="false"
                                                            placeholder="Upload Attachment"/>
                                                            
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <CheckBox id="VendorActive" text="Payment against Dispatch Documents" class="CheckBox" selected="false" select="onVendorCheckSelect" />
                        </ScrollContainer>
                        
                        <HBox id="ButtonHbox" justifyContent="End">
                            <VBox id="ButtonVbox" fitContainer="true" >
                                <Button id="OnAddRow" type="Transparent" icon="sap-icon://add" press="OnAddRowPress"/>
                                <Button id="OnDeleteRow" type="Transparent" visible="false" icon="sap-icon://less" press="OnDeleteRowPress"/>
                            </VBox>
                        </HBox> 
                    </VBox>
                </HBox>
            <!-- </HBox> -->

            <f:SimpleForm id="addUserForm4" maxContainerCols="1" editable="true" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="1" emptySpanM="1" columnsL="2" columnsM="2">
                <f:content>
                    <Button id="pdfPreviewButton" text="Preview Attachment" visible="false" press="onPreviewPress" type="Emphasized"/> <!--03.09.2024-->
                    <Button id="Save" text="Save" icon="sap-icon://save" press="OnSave" type="Emphasized" />
                    <Button id="Draft" text="Save as Draft" icon="sap-icon://write-new-document" press="OnSaveDraft" type="Emphasized"/>
                    <Button id="Back" text="Back" icon="sap-icon://nav-back" press="OnBack" type="Emphasized"/>
                    <!-- <Button id="SAP" text="SAP" press="OnSap" type="Emphasized"/> -->
                </f:content>
            </f:SimpleForm>
        </VBox>

        <footer >
            <OverflowToolbar id="_IDGenOverflowToolbar1" class="sapUiMediumMarginTop">
                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                <Link id="_IDGenLink1" class="LinkHbox" text="Copyright Â© 2017 - North Eastern Electric Power Corporation Limited" target="_blank" href="https://neepco.co.in/" />
                <ToolbarSpacer id="_IDGenToolbarSpacer2"/>
            </OverflowToolbar>
        </footer>
    </Page>

</mvc:View>
